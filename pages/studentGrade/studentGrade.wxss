/* pages/oneStudentGrade/oneStudentGrade.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  font-family: '等线';
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.button-container {
  /* 定义按钮容器的样式 */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10rpx 0;
}

.exam {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.check {
  padding-left: 30rpx;
  color: #777;
}